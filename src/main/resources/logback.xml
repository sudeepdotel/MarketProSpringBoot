<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <property name="LOG_FILE" value="logs/app.log" />

    <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/app.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <maxFileSize>5KB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %36.36logger{36} [%t] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%t] %-5level   %36.36logger{36}    -  %msg%n</pattern>

        </encoder>
    </appender>

    <logger name="org.nepalimarket.nepalimarketproproject" level="trace" additivity="false">
        <appender-ref ref="FILE-ROLLING" />
        <appender-ref ref="CONSOLE" />
    </logger>

<!--    <root level="error">-->
<!--        <appender-ref ref="FILE-ROLLING" />-->
<!--        <appender-ref ref="CONSOLE" />-->
<!--    </root>-->

    <!-- Log Tomcat port -->
    <logger name="org.springframework.boot" level="trace">
        <appender-ref ref="CONSOLE" />
    </logger>

</configuration>
